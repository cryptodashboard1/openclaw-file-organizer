{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Auto Organizer",
  "version": "0.1.0",
  "identifier": "com.autoorganizer.localdesktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Auto Organizer",
        "width": 1280,
        "height": 880,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": ["../../local-daemon/dist/**"]
  }
}
